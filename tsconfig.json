{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "rootDirs": ["src"],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types"],
    "noImplicitAny": false,
    "paths": {},
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "modules"
  ]
}
